      <% three_products.each do |product| %>
      <div class="col-md-4">
        <h3><a href="/products/<%= product.id %>"><%= product.name %></a></h3>
        <h3>Brand: <%= product.brand %></h3>
        <h3>Price: <%= product.price %></h3>
        <h3>Tax: <%= product.tax %></h3>
      </div>
      <% end %> 
    </div>
    <% end %> 
