<title>Welcome to New Digital Shop</title>

<table>
  <tr>
    <th>Product</th>
    <th>Brand</th>
    <th>Price</th>
    <th>Tax</th>
  </tr>
  <tr>
    <td><%= @product.name %></td>
    <td><%= @product.brand %></td>
    <td><%= @product.price %></td>
    <td><%= @product.tax %></td>
  </tr>   
</table>

<%= form_tag "/products/#{@product.id}", method: :delete do %>
  <input type="submit" value="Delete">
<% end %> 